[Unit]
Description=The Chrome headless browser is used to render (and print) web pages in a consistent manner

[Service]
Type=simple
WorkingDirectory=<%= @app_root.shellescape %>
User=<%= @original_user.shellescape %>
ExecStart=/usr/bin/chromium-browser --headless --remote-debugging-port=9222 https://chromium.org/

[Install]
WantedBy=multi-user.target
