[Unit]
Description=Unicorn is an HTTP server for Rack applications.
Requires=postgresql.service

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/apps/affective/current
Environment=RBENV_VERSION=<%= @rbenv_version.shellescape %>
ExecStart=/usr/bin/sudo -u ubuntu -- rbenv exec bundle exec unicorn_rails \
    -E production \
    -c config/unicorn.rb

[Install]
WantedBy=multi-user.target
